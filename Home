import { createPageUrl } from "@/utils";
import { base44 } from "@/api/base44Client";
import { useQuery } from "@tanstack/react-query";
import { 
  Search, 
  ArrowRight, 
  Briefcase, 
  Users, 
  Shield, 
  Zap,
  MapPin,
  Star,
  CheckCircle2
} from "lucide-react";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Card } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import JobCard from "@/components/jobs/JobCard";
import ProviderCard from "@/components/providers/ProviderCard";

const categories = [
  { name: "Plumbing", icon: "ðŸ”§", jobs: 45 },
  { name: "Electrical", icon: "âš¡", jobs: 38 },
  { name: "Cleaning", icon: "âœ¨", jobs: 62 },
  { name: "Carpentry", icon: "ðŸªš", jobs: 29 },
  { name: "Painting", icon: "ðŸŽ¨", jobs: 34 },
  { name: "Gardening", icon: "ðŸŒ¿", jobs: 41 },
  { name: "IT Services", icon: "ðŸ’»", jobs: 56 },
  { name: "Photography", icon: "ðŸ“¸", jobs: 27 },
