import { useState, useEffect } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery } from "@tanstack/react-query";
import {
  DollarSign,
  Users,
  Briefcase,
  MessageSquare,
  TrendingUp,
  Loader2,
  ShieldAlert,
  Calendar,
  ArrowUpRight,
  ArrowDownRight
} from "lucide-react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { format } from "date-fns";

export default function AdminDashboard() {
  const [user, setUser] = useState(null);
  const [isAdmin, setIsAdmin] = useState(false);

  useEffect(() => {
    const loadUser = async () => {
      try {
        const isAuth = await base44.auth.isAuthenticated();
        if (isAuth) {
          const userData = await base44.auth.me();
          setUser(userData);
          setIsAdmin(userData.role === "admin");
        } else {
          base44.auth.redirectToLogin();
        }
      } catch (e) {
        base44.auth.redirectToLogin();
      }
    };
    loadUser();
  }, []);

  const { data: providers = [], isLoading: providersLoading } = useQuery({
    queryKey: ["allProviders"],
    queryFn: () => base44.entities.ServiceProvider.list("-created_date"),
    enabled: isAdmin,
  });

  const { data: jobs = [], isLoading: jobsLoading } = useQuery({
    queryKey: ["allJobs"],
    queryFn: () => base44.entities.Job.list("-created_date"),
    enabled: isAdmin,
  });

  const { data: responses = [], isLoading: responsesLoading } = useQuery({
    queryKey: ["allResponses"],
    queryFn: () => base44.entities.JobResponse.list("-created_date"),
    enabled: isAdmin,
  });

  const { data: transactions = [], isLoading: transactionsLoading } = useQuery({
    queryKey: ["allTransactions"],
    queryFn: () => base44.entities.CreditTransaction.list("-created_date", 100),
    enabled: isAdmin,
  });

  if (!user || !isAdmin) {
    return (
      <div className="min-h-screen bg-slate-50 flex items-center justify-center">
        {!isAdmin && user ? (
          <div className="text-center">
            <ShieldAlert className="w-16 h-16 mx-auto text-red-500 mb-4" />
            <h2 className="text-2xl font-bold text-slate-900 mb-2">Access Denied</h2>
            <p className="text-slate-600">You need admin privileges to view this page.</p>
          </div>
        ) : (
          <Loader2 className="w-8 h-8 animate-spin text-emerald-600" />
        )}
      </div>
    );
  }

  const isLoading = providersLoading || jobsLoading || responsesLoading || transactionsLoading;

  // Calculate total earnings
  const totalEarnings = transactions
    .filter(t => t.type === "purchase" && t.price_zar)
    .reduce((sum, t) => sum + t.price_zar, 0);

  // Calculate this month's earnings
  const now = new Date();
  const firstDayOfMonth = new Date(now.getFullYear(), now.getMonth(), 1);
  const monthEarnings = transactions
    .filter(t => t.type === "purchase" && t.price_zar && new Date(t.created_date) >= firstDayOfMonth)
    .reduce((sum, t) => sum + t.price_zar, 0);

  // Calculate stats
  const openJobs = jobs.filter(j => j.status === "open").length;
  const verifiedProviders = providers.filter(p => p.is_verified).length;
  const totalCreditsUsed = Math.abs(
    transactions.filter(t => t.type === "usage").reduce((sum, t) => sum + t.amount, 0)
  );

  const stats = [
    {
      title: "Total Earnings",
      value: `R${totalEarnings.toLocaleString()}`,
      icon: DollarSign,
      change: monthEarnings > 0 ? `+R${monthEarnings.toLocaleString()} this month` : null,
      color: "bg-emerald-500",
    },
    {
      title: "Service Providers",
      value: providers.length,
      subtitle: `${verifiedProviders} verified`,
      icon: Users,
      color: "bg-blue-500",
    },
    {
      title: "Total Jobs",
      value: jobs.length,
      subtitle: `${openJobs} currently open`,
      icon: Briefcase,
      color: "bg-purple-500",
    },
    {
      title: "Job Responses",
      value: responses.length,
      subtitle: `${totalCreditsUsed} credits used`,
      icon: MessageSquare,
      color: "bg-orange-500",
    },
  ];

  const recentPurchases = transactions
    .filter(t => t.type === "purchase")
    .slice(0, 10);

  const recentProviders = providers.slice(0, 5);

  return (
    <div className="min-h-screen bg-slate-50 py-8">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {/* Header */}
        <div className="mb-8">
          <div className="flex items-center gap-3 mb-2">
            <div className="w-12 h-12 bg-emerald-100 rounded-xl flex items-center justify-center">
              <TrendingUp className="w-6 h-6 text-emerald-600" />
            </div>
            <div>
              <h1 className="text-3xl font-bold text-slate-900">Admin Dashboard</h1>
              <p className="text-slate-600">SizaPro Platform Overview</p>
            </div>
          </div>
        </div>

        {isLoading ? (
          <div className="flex items-center justify-center py-20">
            <Loader2 className="w-8 h-8 animate-spin text-emerald-600" />
          </div>
        ) : (
          <>
            {/* Stats Grid */}
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
              {stats.map((stat) => (
                <Card key={stat.title} className="border-0 shadow-lg overflow-hidden">
                  <CardContent className="p-6">
                    <div className="flex items-start justify-between">
                      <div>
                        <p className="text-sm text-slate-500 mb-1">{stat.title}</p>
                        <h3 className="text-3xl font-bold text-slate-900 mb-1">{stat.value}</h3>
                        {stat.subtitle && (
                          <p className="text-xs text-slate-500">{stat.subtitle}</p>
                        )}
                        {stat.change && (
                          <div className="flex items-center gap-1 mt-2">
                            <ArrowUpRight className="w-3 h-3 text-emerald-600" />
                            <span className="text-xs text-emerald-600 font-medium">{stat.change}</span>
                          </div>
                        )}
                      </div>
                      <div className={`w-12 h-12 ${stat.color} rounded-lg flex items-center justify-center`}>
                        <stat.icon className="w-6 h-6 text-white" />
                      </div>
                    </div>
                  </CardContent>
                </Card>
              ))}
            </div>

            <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
              {/* Recent Purchases */}
              <Card className="border-0 shadow-lg">
                <CardHeader>
                  <CardTitle className="text-lg flex items-center gap-2">
                    <DollarSign className="w-5 h-5 text-slate-400" />
                    Recent Credit Purchases
                  </CardTitle>
                </CardHeader>
                <CardContent>
                  {recentPurchases.length > 0 ? (
                    <div className="space-y-3">
                      {recentPurchases.map((transaction) => (
                        <div
                          key={transaction.id}
                          className="flex items-center justify-between p-3 bg-slate-50 rounded-lg"
                        >
                          <div className="flex-1">
                            <p className="text-sm font-medium text-slate-900">
                              {transaction.provider_email}
                            </p>
                            <p className="text-xs text-slate-500">
                              {transaction.description}
                            </p>
                            <p className="text-xs text-slate-400 mt-1">
                              {format(new Date(transaction.created_date), "dd MMM yyyy, HH:mm")}
                            </p>
                          </div>
                          <div className="text-right">
                            <p className="text-lg font-bold text-emerald-600">
                              R{transaction.price_zar?.toLocaleString()}
                            </p>
                            <Badge className="bg-emerald-100 text-emerald-700 text-xs">
                              +{transaction.amount} credits
                            </Badge>
                          </div>
                        </div>
                      ))}
                    </div>
                  ) : (
                    <p className="text-sm text-slate-500 text-center py-8">No purchases yet</p>
                  )}
                </CardContent>
              </Card>

              {/* Recent Providers */}
              <Card className="border-0 shadow-lg">
                <CardHeader>
                  <CardTitle className="text-lg flex items-center gap-2">
                    <Users className="w-5 h-5 text-slate-400" />
                    Recent Providers
                  </CardTitle>
                </CardHeader>
                <CardContent>
                  {recentProviders.length > 0 ? (
                    <div className="space-y-3">
                      {recentProviders.map((provider) => (
                        <div
                          key={provider.id}
                          className="flex items-center justify-between p-3 bg-slate-50 rounded-lg"
                        >
                          <div className="flex-1">
                            <p className="text-sm font-medium text-slate-900">
                              {provider.business_name}
                            </p>
 
